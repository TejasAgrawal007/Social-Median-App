<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <main class="min-h-screen w-full bg-zinc-900 p-10 text-white">
        <form action="/login" method="post">
            <h1 class="tracking-tighter mb-3 text-white font-semibold shadow-sm text-3xl" >Login User</h1>
            <input class="px-3 py-3 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="email" name="email" placeholder="email">
            <input class="px-3 py-3 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="text" name="password" placeholder="password">
            <button class="btn bg-blue-500 hover:bg-blue-600 px-4 py-3 text-white rounded-lg">Login User</button>
        </form>
    </main>
</body>
</html>